# ===========================================
# VStats Cloud - Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# ==========================================
# Server Configuration
# ==========================================
# HTTP/HTTPS ports (default: 80/443)
HTTP_PORT=80
HTTPS_PORT=443

# API server image (使用预构建镜像或本地构建)
API_IMAGE=vstats-api:latest

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=vstats
POSTGRES_PASSWORD=change_this_secure_password_123
POSTGRES_DB=vstats_cloud

# Connection string for application (自动生成，无需手动设置)
# DATABASE_URL=postgres://vstats:change_this_secure_password_123@postgres:5432/vstats_cloud

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=change_this_redis_password_456

# Connection string for application (自动生成，无需手动设置)
# REDIS_URL=redis://:change_this_redis_password_456@redis:6379/0

# ==========================================
# Application Configuration
# ==========================================
# Server settings
APP_ENV=production
APP_DEBUG=false
APP_PORT=3001
APP_URL=https://vstats.example.com

# Session settings
SESSION_SECRET=generate_a_random_32_char_string_here
SESSION_MAX_AGE=604800  # 7 days in seconds

# JWT settings
JWT_SECRET=generate_another_random_32_char_string
JWT_EXPIRES_IN=7d

# ==========================================
# OAuth Configuration
# ==========================================
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://vstats.example.com/api/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://vstats.example.com/api/auth/google/callback

# ==========================================
# Email Configuration (Optional)
# ==========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=smtp_password
# SMTP_FROM=VStats <noreply@vstats.example.com>

# ==========================================
# Monitoring & Logging
# ==========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Metrics retention in days
METRICS_RETENTION_DAYS=30

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Admin Configuration (Optional)
# ==========================================
# pgAdmin (if enabled in docker-compose)
# PGADMIN_EMAIL=admin@vstats.local
# PGADMIN_PASSWORD=admin_secure_password

# ==========================================
# Security
# ==========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://vstats.example.com,https://www.vstats.example.com

# Encryption key for sensitive data (32 bytes, base64 encoded)
ENCRYPTION_KEY=generate_a_base64_encoded_32_byte_key
