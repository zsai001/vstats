# ===========================================
# VStats Cloud - Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# ==========================================
# API Server Configuration
# ==========================================
# API server image
API_IMAGE=zsai001/vstats-cloud:latest

# Application URL (used for OAuth callbacks, etc.)
APP_URL=https://vstats.example.com

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_USER=vstats
POSTGRES_PASSWORD=change_this_secure_password_123
POSTGRES_DB=vstats_cloud

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=change_this_redis_password_456

# ==========================================
# Application Configuration
# ==========================================
APP_ENV=production
LOG_LEVEL=info

# Session settings
SESSION_SECRET=generate_a_random_32_char_string_here

# JWT settings
JWT_SECRET=generate_another_random_32_char_string

# ==========================================
# OAuth Configuration
# ==========================================
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==========================================
# Monitoring & Logging
# ==========================================
METRICS_RETENTION_DAYS=30

# ==========================================
# Security
# ==========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://vstats.example.com,https://www.vstats.example.com
